<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amanaje"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".activities.PrivContactsActivity"
            android:label="@string/title_activity_priv_contacts" >
        </activity>
        <activity
            android:name=".activities.ContactDetailActivity"
            android:label="@string/title_activity_contact_detail" >
        </activity>
        <activity
            android:name=".activities.MessageActivity"
            android:label="@string/title_activity_message" >
        </activity>
        <activity
            android:name="com.amanaje.activities.NewSmsActivity"
            android:label="@string/title_activity_new_sms" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

</manifest>